generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int           @id @default(autoincrement())
  firstName         String
  middleName        String?
  lastName          String
  email             String        @unique
  password          String
  mobileNumber      String
  dateOfBirth       DateTime
  standard          Int
  schoolName        String
  city              String
  totalQuizzesTaken Int           @default(0)
  isAdmin           Boolean       @default(false)
  certificates      Certificate[]
  quizResults       QuizResult[]
  createdQuizzes    Quiz[]

  @@map("users")
}

model Quiz {
  id                Int            @id @default(autoincrement())
  title             String
  startDate         DateTime
  endDate           DateTime
  isBasic           Boolean
  imageLink         String
  description       String
  adminId           Int
  categories        String[]
  certificates      Certificate[]
  quizAnalytics     QuizAnalytics?
  selectedQuestions QuizQuestion[]
  quizResults       QuizResult[]
  admin             User           @relation(fields: [adminId], references: [id])

  @@map("quizzes")
}

model Question {
  id            Int            @id @default(autoincrement())
  question      String
  correctAnswer String
  option1       String
  option2       String
  option3       String
  category      String
  isBasic       Boolean
  imageUrl      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  QuizQuestion  QuizQuestion[]
}

model QuizQuestion {
  id         Int      @id @default(autoincrement())
  quizId     Int
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
  quiz       Quiz     @relation(fields: [quizId], references: [id])

  @@map("quiz_questions")
}

model QuizResult {
  id               Int  @id @default(autoincrement())
  userId           Int
  quizId           Int
  score            Int
  correctAnswers   Int
  incorrectAnswers Int
  skippedQuestions Int
  quiz             Quiz @relation(fields: [quizId], references: [id])
  user             User @relation(fields: [userId], references: [id])

  @@map("quiz_results")
}

model Certificate {
  id             Int      @id @default(autoincrement())
  userId         Int
  quizId         Int
  certificateURL String
  issuedDate     DateTime
  quiz           Quiz     @relation(fields: [quizId], references: [id])
  user           User     @relation(fields: [userId], references: [id])

  @@map("certificates")
}

model QuizAnalytics {
  id                Int   @id @default(autoincrement())
  quizId            Int   @unique
  totalParticipants Int
  averageScore      Float
  highestScore      Int
  lowestScore       Int
  quiz              Quiz  @relation(fields: [quizId], references: [id])

  @@map("quiz_analytics")
}
